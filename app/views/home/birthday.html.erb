  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand" href="/home/birthday">Happy Birthday</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/home/birthday">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/home/gallery">Gallery</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/bg.jpg')">
      <div class="overlay">
      </div>
      <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="site-heading">
                <h1><small>빛순후님의 생일을<br>축하합니다!</h1>
                <span class="subheading">2018.08.14.</span>
              </div>
            </div>
          </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <h1 class="my-4">Congratulatory Message</h1>
      <div class="row">
        <!--축하 메시지-->
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Message</th>
            </tr>
          </thead>
          <tbody>
            <% if @all_record.present? %>
                <% @all_record.each do |a| %>
                  <tr>
                    <th scope="row"><%= a.id %></th>
                    <td><%= a. name%></td>
                    <td><%= a. content%></td>
                  </tr>
                <% end %>    
            <% end %>
          </tbody>
        </table>
        <!--입력창-->
        <form action = "/home/create" method = "get">
          <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input class="form-control" name="name" placeholder="ex)김수누">
          </div>
          
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Message</label>
            <textarea class="form-control" name="content" rows="2"></textarea>
          </div>
          
          <div class="clearfix">
            <button type=submit class="btn btn-primary float-right" >입력 &rarr;</a>
          </div>
          
          
        </form>
      </div>
    </div>
    
    <!--갤러리 버튼-->
    <br>
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="/home/gallery">갤러리 보러가기 &rarr;</a>
      </div>
    <hr>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p class="copyright text-muted">Copyright &copy; SoonHoo Birthday 2018 <br>made by LeeSangYoon</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/js/clean-blog.min.js"></script>

  </body>

